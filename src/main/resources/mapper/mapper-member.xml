<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kt.caike.member.db.mapper.MemberMapper">

    <select id="findMemberById" resultType="com.kt.caike.member.db.entity.Member" >
        SELECT *
        FROM member
        WHERE id = #{id}
    </select>

    <select id="findMemberAll" resultType="com.kt.caike.member.db.entity.Member">
        SELECT * FROM member
    </select>

    <insert id="saveMember">
        INSERT INTO member (name, email, password) values (#{name}, #{email}, #{password})
    </insert>

</mapper>